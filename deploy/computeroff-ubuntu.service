[Unit]
Description=ComputerOff Server
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/opt/computeroff/server
Environment="PATH=/opt/computeroff/venv/bin"
ExecStart=/opt/computeroff/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
